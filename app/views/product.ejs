<%- include('header') %>

<div class="card">
    <div class="card-title">product</div>
    <div class="mt-2">
        <a href="/addProduct" class="btn btn-success">
            <span class="material-symbols-outlined material-icon">
                add
            </span>
            add product
        </a>
        <div class="mt-2">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th></th>
                        <th>Picture</th>
                        <th>Type</th>
                        <th>Barcode</th>
                        <th>Product list</th>
                        <th>Cost</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach((product) => { %>
                    <tr>
                        <td>
                            <a class="btn btn-info" href="/editProduct/<%= product.id %>">
                                <span class="material-symbols-outlined material-icon">
                                    edit
                                  </span>
                                  edit
                            </a>
                            <a class="btn btn-danger" href="/deleteProduct/<%= product.id %>/<%= product.img %>" onclick="return confirm('delete?')">
                                <span class="material-symbols-outlined material-icon">
                                    close
                                  </span>
                                  delete
                            </a>
                        </td>
                        <td><img src="/images/<%= product.img %>" width="100px" /></td>
                        <td><%= product.group_product_name %></td>
                        <td><%= product.barcode %></td>
                        <td><%= product.name %></td>
                        <td><%= product.cost %></td>
                        <td><%= product.price %></td>
                    </tr>

                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('footer') %>
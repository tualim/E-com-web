<%- include('header') %>

    <div class="card">
        <div class="card-body">
            <div class="card-title h3">Daily report</div>
            <!--use method get to query data through url-->
            <form action="" method="get">
                <div class="form-row">
                    <div class="form-group mt-1 h5 mr-3">Year</div>
                    <div class="form-group col-md-4 mr-3">
                        <select name="year" id="" class="form-control">
                            <% arrYears.forEach((item) => { %>
                            <option value="<%= item %>" <% if(item == y) { %> selected <% } %>> 
                                <%= item %>
                            </option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="form-group mt-1 h5 mr-3">Month</div>
                    <div class="form-group col-md-4 mr-3">
                        <select name="month" id="" class="form-control">
                            <% arrMonths.forEach((item, index) => { %>
                                <option value="<%= index + 1 %>"<% if(index + 1 == m) { %> selected <% } %>>
                                    <%= item %>
                                </option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary material-icon">
                            Show
                        </button>
                    </div>
                </div>
            </form>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Sales</th>
                    </tr>
                </thead>    
                <tbody>     
                    <% arr.forEach((item, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= item %></td>
                    </tr>
                    <% }) %>
                </tbody>    
            </table>
        </div>
    </div>

<%- include('footer') %>